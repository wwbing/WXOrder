/* pages/kitchen/edit/index.wxss */
page {
  background-color: #f7f8fa;
  padding-bottom: 40rpx;
}

.container {
  padding: 0;
}

/* Tabs */
.tabs-nav {
  display: flex;
  background: white;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  position: relative;
  padding: 24rpx 0;
  margin-right: 50rpx;
  font-size: 30rpx;
  color: #666;
}

.tab-item.active {
  font-weight: bold;
  color: #333;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #07c160;
  border-radius: 6rpx;
}

/* Form Section */
.form-section {
  padding: 30rpx;
  background: white;
}

.field-group {
  margin-bottom: 40rpx;
}

.label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

/* Background Image Upload */
.bg-uploader {
  position: relative;
  width: 100%;
  height: 300rpx; /* Aspect ratio roughly matching screenshot */
  background-color: #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
}

.btn-change-bg {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #07c160;
  font-weight: 500;
  border: 1rpx solid #e0e0e0;
}

/* Avatar Upload */
.avatar-uploader {
  width: 160rpx;
  height: 160rpx;
  position: relative;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid white;
  background: #07c160;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.camera-icon-wrapper {
  position: absolute;
  right: 0;
  bottom: 0;
  background: white;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.2);
}

.camera-icon {
  font-size: 28rpx;
}

/* Input Fields */
.input-box {
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
}

.textarea-box {
  background: #f5f7fa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
  height: 160rpx;
}

/* Save Button */
.footer-action {
  padding: 40rpx 30rpx;
}

.btn-save {
  background-color: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
