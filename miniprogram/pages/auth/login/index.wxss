/* pages/auth/login/index.wxss */
.login-container {
  min-height: 100vh;
  background-color: var(--bg-body);
}

/* Header Section */
.header-section {
  background: linear-gradient(135deg, #e8fdf5 0%, #FFF 100%);
  padding: 80rpx 40rpx 60rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.05); /* Greenish tint for our theme */
}

.logo-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
}

.logo-emoji {
  font-size: 64rpx;
}

.header-text {
  display: flex;
  flex-direction: column;
}

.app-name {
  font-size: 48rpx;
  font-weight: 800;
  color: #333;
  letter-spacing: 2rpx;
}

.app-slogan {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  font-style: italic;
}

/* Content Section */
.content-section {
  padding: 40rpx;
  padding-bottom: 80rpx;
}

/* Cards */
.action-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  margin-bottom: 40rpx;
  transition: transform 0.2s;
}

.card-header {
  margin-bottom: 30rpx;
}

.card-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* Auth Center Style */
.auth-card.center {
  background: white;
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.auth-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.auth-desc {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 60rpx;
  display: block;
}

/* Inputs */
.input-group {
  background: #f7f8fa;
  border-radius: 12rpx;
  padding: 6rpx 24rpx;
  margin-bottom: 40rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.input-group:focus-within {
  background: white;
  border-color: #07c160;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

.custom-input {
  height: 90rpx;
  font-size: 30rpx;
  color: #333;
}

.input-ph {
  color: #ccc;
}

/* Buttons */
.btn {
  border-radius: 100rpx;
  font-weight: bold;
  font-size: 30rpx;
  padding: 24rpx 0;
}

.btn-primary {
  background: #07c160;
  color: white;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #07c160;
  color: #07c160;
}

.btn-block {
  width: 100%;
}
