/* pages/ordering/index/index.wxss */
.page-ordering-index {
  background-color: var(--bg-body);
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 80rpx;
}

/* Dashboard Card */
.session-card {
  background: white;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  margin-bottom: 40rpx;
}

.card-header-gradient {
  background: linear-gradient(135deg, #FF6B00 0%, #FF9045 100%);
  padding: 40rpx;
  color: white;
  position: relative;
}

.card-header-gradient::after {
  content: '';
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 160rpx;
  height: 160rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 50%;
}

.header-content {
  position: relative;
  z-index: 1;
}

.title-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.session-title {
  font-size: 44rpx;
  font-weight: 800;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.status-badge {
  font-size: 20rpx;
  background: rgba(255,255,255,0.2);
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(255,255,255,0.3);
}

.countdown-wrapper {
  display: flex;
  align-items: center;
  opacity: 0.9;
}

.countdown-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.countdown-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* Stats Row */
.stats-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 0;
  background: white;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-num {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-main);
  line-height: 1.2;
}

.stat-num.highlight {
  color: var(--primary-color);
}

.stat-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.divider-vert {
  width: 2rpx;
  height: 40rpx;
  background: #f0f0f0;
}

/* Participants Avatars */
.participants-preview {
  padding: 0 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1rpx solid #f9f9f9;
  padding-top: 24rpx;
}

.avatars-row {
  display: flex;
  justify-content: center;
  margin-bottom: 12rpx;
}

.avatar-circle {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  margin-left: -16rpx;
  background: #eee;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.avatar-circle:first-child {
  margin-left: 0;
}

.participants-label {
  font-size: 22rpx;
  color: var(--text-placeholder);
}

/* Detail Cards */
.detail-card {
  background: white;
  border-radius: var(--radius-lg);
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-sm);
}

.card-title-row {
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 16rpx;
}

.card-strong-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-main);
  border-left: 6rpx solid var(--secondary-color);
  padding-left: 16rpx;
}

/* Lists */
.summary-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.summary-row {
  display: flex;
  align-items: center;
}

.row-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  margin-right: 20rpx;
}

.row-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.row-name {
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 500;
}

.row-unit-price {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-top: 4rpx;
}

.row-total {
  text-align: right;
}

.row-qty {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
}

.row-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-main);
}

/* Member List */
.member-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.member-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.member-left {
  display: flex;
  align-items: center;
}

.member-face {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #eee;
}

.member-nick {
  font-size: 26rpx;
  color: var(--text-main);
}

.member-consume {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--primary-color);
}

/* Action Footer */
.action-footer {
  margin-top: 60rpx;
}

.btn-main-action {
  background: var(--primary-color);
  color: white;
  width: 100%;
  height: 96rpx;
  border-radius: var(--radius-round);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 0, 0.3);
  margin-bottom: 24rpx;
}

.admin-actions {
  display: flex;
  gap: 24rpx;
}

.btn-secondary-action {
  flex: 1;
  height: 80rpx;
  border-radius: var(--radius-round);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.btn-secondary-action.cancel {
  background: #FFEDEB;
  color: #D4380D;
}

.btn-secondary-action.confirm {
  background: #F6FFED;
  color: #52C41A;
  border: 1rpx solid #B7EB8F;
}

/* Empty State */
.empty-state-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.dashed-circle {
  width: 200rpx;
  height: 200rpx;
  border: 4rpx dashed #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  background: white;
}

.large-icon {
  font-size: 80rpx;
}

.empty-h1 {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
  margin-bottom: 12rpx;
}

.empty-p {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 60rpx;
}

.btn-start-large {
  background: linear-gradient(135deg, #FF6B00 0%, #FF9045 100%);
  color: white;
  padding: 24rpx 80rpx;
  border-radius: var(--radius-round);
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(255, 107, 0, 0.3);
  transition: transform 0.2s;
}

/* Popup & Modals */
.popup-mask {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.6);
  backdrop-filter: blur(4px);
  z-index: 900;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.popup-mask.show {
  opacity: 1;
  pointer-events: auto;
}

.popup-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  z-index: 999;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
}

.popup-modal.show {
  transform: translateY(0);
}

.popup-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.popup-header-title {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
}

.close-icon {
  font-size: 48rpx;
  color: var(--text-secondary);
  padding: 10rpx;
  line-height: 0.8;
}

.form-body {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 20rpx;
}

.modern-input {
  background: #F5F7FA;
  height: 96rpx;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: var(--text-main);
}

.chips-scroll {
  white-space: nowrap;
  margin: 0 -40rpx;
  padding: 0 40rpx;
  display: flex;
}

.time-chip {
  display: inline-flex;
  padding: 16rpx 32rpx;
  background: #F5F7FA;
  border: 2rpx solid transparent;
  border-radius: 40rpx;
  color: var(--text-secondary);
  margin-right: 16rpx;
  font-size: 28rpx;
  transition: all 0.2s;
}

.time-chip.selected {
  background: #FFF2E8;
  border-color: #FF6B00;
  color: #FF6B00;
  font-weight: 600;
}

.btn-create-confirm {
  width: 100%;
  height: 96rpx;
  background: var(--primary-color);
  color: white;
  border-radius: var(--radius-round);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

/* Spinner */
.loading-overlay {
  position: absolute;
  inset: 0;
  background: rgba(255,255,255,0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 500;
}

.spinner {
  width: 50rpx;
  height: 50rpx;
  border: 5rpx solid #eee;
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spinner 0.8s linear infinite;
}

@keyframes spinner {
  to { transform: rotate(360deg); }
}

