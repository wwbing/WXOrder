/* pages/ordering/select/index.wxss */
page {
  background-color: #f7f8fa;
}

.container {
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 会话信息 */
.session-header {
  background-color: white;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.session-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.session-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.session-deadline {
  font-size: 26rpx;
  color: #f59e0b;
}

/* 已选菜品 */
.selected-section {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #e0f2fe;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #0284c7;
}

.section-count {
  font-size: 26rpx;
  color: #0284c7;
}

.selected-list {
  padding: 0 20rpx;
}

.selected-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.selected-item:last-child {
  border-bottom: none;
}

.selected-item .item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  background-color: #f0f0f0;
}

.selected-item .item-info {
  flex: 1;
  margin-left: 16rpx;
}

.selected-item .item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.selected-item .item-price {
  font-size: 26rpx;
  color: #07c160;
  margin-top: 6rpx;
  display: block;
}

.selected-item .item-actions {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
}

.quantity-btn.minus {
  background-color: #f3f4f6;
  color: #666;
}

.quantity-btn.plus {
  background-color: #07c160;
  color: white;
}

.quantity {
  font-size: 28rpx;
  color: #333;
  min-width: 60rpx;
  text-align: center;
}

.selected-footer {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.total {
  flex: 1;
}

.total-label {
  font-size: 28rpx;
  color: #666;
}

.total-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
  margin-left: 10rpx;
}

.submit-btn {
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #07c160 0%, #10b981 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 28rpx;
}

/* 空选择状态 */
.empty-selection {
  text-align: center;
  padding: 80rpx 40rpx;
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.empty-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
  display: block;
}

/* 分类Tab */
.category-scroll {
  background-color: white;
  white-space: nowrap;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-list {
  padding: 20rpx;
  display: flex;
  gap: 16rpx;
}

.category-item {
  display: inline-flex;
  padding: 16rpx 28rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.2s;
}

.category-item.active {
  background-color: #07c160;
  color: white;
}

.category-count {
  font-size: 22rpx;
  background-color: rgba(0, 0, 0, 0.1);
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
  margin-left: 8rpx;
}

.category-item.active .category-count {
  background-color: rgba(255, 255, 255, 0.2);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
}

/* 菜品列表 */
.menu-list {
  padding: 20rpx;
}

.menu-item {
  display: flex;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.04);
}

.menu-item .item-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.menu-item .item-info {
  flex: 1;
  margin-left: 16rpx;
  display: flex;
  flex-direction: column;
}

.menu-item .item-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.menu-item .item-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
  margin-top: 10rpx;
}

.menu-item .item-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.menu-item .item-actions {
  display: flex;
  align-items: flex-end;
  margin-left: 16rpx;
}

.add-btn {
  width: 56rpx;
  height: 56rpx;
  background-color: #07c160;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
}

.add-btn.has-added {
  background-color: #e0f2fe;
  color: #0284c7;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}
