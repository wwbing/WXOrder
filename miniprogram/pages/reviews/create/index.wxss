/* pages/reviews/create/index.wxss */
page {
  background: #f6f7f9;
}

.review-container {
  padding: 30rpx;
  min-height: 100vh;
}

.review-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.section {
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* Rating Stars */
.rating-stars {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.star {
  font-size: 80rpx;
  color: #ddd;
  transition: all 0.2s;
}

.star.active {
  color: #faad14;
  transform: scale(1.1);
}

.rating-text {
  text-align: center;
  font-size: 28rpx;
  color: #faad14;
  font-weight: bold;
}

/* Praise Input */
.praise-input {
  width: 100%;
  min-height: 200rpx;
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.praise-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* Template Grid */
.template-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.template-item {
  background: linear-gradient(135deg, #ffeef8 0%, #fff5f7 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 24rpx;
  color: #ff6b9d;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.template-item:active {
  border-color: #ff6b9d;
  transform: scale(0.95);
}

/* Submit Button */
.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #0ebf5c 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-top: 20rpx;
}
