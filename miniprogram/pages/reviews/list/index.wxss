/* pages/reviews/list/index.wxss */
page {
  background-color: #f7f8fa;
}

.container {
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 评价统计卡片 */
.stats-card {
  background: linear-gradient(135deg, #07c160 0%, #10b981 100%);
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  color: white;
}

.avg-section {
  display: flex;
  align-items: baseline;
  margin-right: 30rpx;
}

.avg-score {
  font-size: 80rpx;
  font-weight: bold;
}

.avg-unit {
  font-size: 28rpx;
  margin-left: 8rpx;
}

.rating-info {
  flex: 1;
}

.stars {
  display: flex;
  gap: 4rpx;
  margin-bottom: 10rpx;
}

.stars .star {
  color: rgba(255, 255, 255, 0.4);
  font-size: 32rpx;
}

.stars .star.active {
  color: #fff;
}

.total-count {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 热门标签 */
.tags-section {
  background-color: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.tags-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tags-list .tag {
  padding: 12rpx 24rpx;
  background-color: #f0f9f4;
  color: #07c160;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 评价列表 */
.reviews-list {
  padding: 20rpx;
}

.review-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.review-header .stars {
  display: flex;
  gap: 4rpx;
}

.review-header .star {
  font-size: 24rpx;
  color: #ddd;
}

.review-header .star.active {
  color: #f59e0b;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

.review-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 评价图片 */
.review-images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.review-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

/* 评价标签 */
.review-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.review-tags .tag {
  padding: 8rpx 16rpx;
  background-color: #f3f4f6;
  color: #666;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 150rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 写评价按钮 */
.write-review-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.write-btn {
  height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #10b981 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
