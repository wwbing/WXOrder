/* pages/profile/settings/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.section {
  background-color: white;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  padding: 20rpx 30rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item .label {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.setting-item .value {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.switch {
  transform: scale(0.8);
}

.logout-btn {
  margin: 40rpx 30rpx;
  background-color: white;
  color: #ff4d4f;
  border: none;
  border-radius: 20rpx;
}

.about-section {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 24rpx;
}
