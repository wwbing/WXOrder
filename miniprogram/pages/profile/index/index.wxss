/* pages/profile/index/index.wxss */
page {
  background-color: #f6f7f9;
}

.profile-container {
  min-height: 100vh;
  position: relative;
}

/* 1. Immersive Header */
.profile-header {
  background: linear-gradient(135deg, #07c160 0%, #0ebf5c 100%);
  padding: 40rpx 40rpx 120rpx;
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
  color: white;
}

.slogan-row {
  margin-bottom: 40rpx;
  opacity: 0.9;
}

.slogan-text {
  font-size: 28rpx;
  letter-spacing: 2rpx;
}

.user-row {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.3);
  margin-right: 30rpx;
  background: rgba(255,255,255,0.2);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.role-badge {
  font-size: 22rpx;
  background: rgba(255,255,255,0.2);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255,255,255,0.4);
}

.uid-text {
  font-size: 24rpx;
  opacity: 0.8;
}

.arrow-right {
  font-size: 32rpx;
  color: rgba(255,255,255,0.6);
}

/* 2. Content Body */
.content-body {
  padding: 0 30rpx;
  margin-top: -80rpx;
  position: relative;
  z-index: 10;
  padding-bottom: 120rpx;
}

/* Role Switch Card */
.role-switch-card {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.switch-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

/* Section Title */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

/* Stats Section */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  transition: transform 0.2s;
}

.stat-card:active {
  transform: scale(0.95);
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* Wishing Well Card */
.wishing-well-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  color: white;
}

.wish-icon {
  font-size: 60rpx;
  margin-right: 24rpx;
}

.wish-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.wish-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.wish-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.arrow {
  font-size: 32rpx;
  opacity: 0.7;
}

/* Chef Zone */
.chef-zone {
  margin-bottom: 40rpx;
}

.action-list {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.action-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background 0.2s;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item:active {
  background: #f9f9f9;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
}

.action-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.action-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #999;
}

/* Settings */
.settings-section {
  margin-top: 40rpx;
}

.btn-logout {
  background: white;
  border: 2rpx solid #f5f5f5;
  color: #666;
  border-radius: 100rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}
