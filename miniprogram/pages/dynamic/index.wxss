/* pages/dynamic/index.wxss */
page {
  background: #f6f7f9;
}

.dynamic-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* Tabs Header */
.tabs-header {
  background: white;
  display: flex;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  padding: 20rpx 0;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #07c160;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #07c160;
  border-radius: 3rpx;
}

/* Order List */
.order-list {
  flex: 1;
  padding: 20rpx 30rpx 120rpx;
}

.order-card {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

/* Order Header */
.order-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #eee;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}

.status-cooking {
  background: #e6f7ff;
  color: #1890ff;
}

.status-ready {
  background: #f6ffed;
  color: #52c41a;
}

.status-completed {
  background: #f5f5f5;
  color: #999;
}

/* Order Items */
.order-items {
  margin-bottom: 20rpx;
}

.item-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  font-size: 28rpx;
}

.dish-name {
  flex: 1;
  color: #333;
}

.dish-qty {
  color: #999;
  margin-right: 20rpx;
}

.dish-price {
  color: #07c160;
  font-weight: 500;
}

/* Total */
.order-total {
  text-align: right;
  font-size: 32rpx;
  color: #333;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
  margin-bottom: 30rpx;
}

.amount {
  color: #07c160;
  font-weight: bold;
  font-size: 36rpx;
}

/* Praise Section */
.praise-section {
  background: linear-gradient(135deg, #ffeef8 0%, #fff5f7 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  border-left: 4rpx solid #ff6b9d;
}

.praise-header {
  font-size: 26rpx;
  color: #ff6b9d;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.praise-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.praise-author {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  font-style: italic;
}

/* Review Section */
.review-section {
  background: #fff9e6;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  border-left: 4rpx solid #faad14;
}

.review-header {
  font-size: 26rpx;
  color: #faad14;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.review-comment {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* Actions */
.order-actions {
  display: flex;
  gap: 20rpx;
}

.btn-action {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.btn-primary {
  background: #07c160;
  color: white;
}

.btn-success {
  background: linear-gradient(135deg, #52c41a 0%, #95de64 100%);
  color: white;
}

.btn-outline {
  background: white;
  color: #07c160;
  border: 2rpx solid #07c160;
}

.btn-ghost {
  background: #f5f5f5;
  color: #ccc;
}

.btn-rainbow {
  background: linear-gradient(135deg, #ff6b6b, #feca57, #48dbfb, #ff9ff3);
  color: white;
  font-weight: bold;
}

.btn-danger {
  background: #ff4d4f;
  color: white;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 200rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 40rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: #999;
}
