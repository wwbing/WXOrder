/* pages/menu/search/index.wxss */
.page-search {
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}

/* Search Header */
.search-header {
  padding: 20rpx 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #f5f5f5;
}

.search-bar {
  flex: 1;
  height: 72rpx;
  background-color: #f7f8fa;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.search-icon {
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.btn-cancel {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #666;
}

/* Results Area */
.search-results {
  flex: 1;
  padding: 0 30rpx;
}

/* Empty State */
.empty-state {
  margin-top: 100rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.empty-emoji {
  font-size: 64rpx;
  margin-bottom: 20rpx;
  display: block;
}

/* List Item */
.menu-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}

.item-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #eee;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 4rpx 0;
}

.item-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-top: 8rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 32rpx;
  color: #fa5151;
  font-weight: bold;
}

.btn-add {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #07c160;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(7, 193, 96, 0.3);
}
