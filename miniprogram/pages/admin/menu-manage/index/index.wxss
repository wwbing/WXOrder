/* pages/admin/menu-manage/index/index.wxss */
page {
  background-color: #f7f8fa;
  height: 100vh;
  overflow: hidden;
}

.container {
  display: flex;
  flex-direction: row;
  height: 100vh;
  padding: 0;
  overflow: hidden;
}

/* Sidebar */
.sidebar {
  width: 200rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  height: 100%;
  border-right: 1rpx solid #eee;
}

.sidebar-scroll {
  flex: 1;
  overflow-y: auto;
}

.sidebar-item {
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  position: relative;
}

.sidebar-item.active {
  background-color: #f7f8fa; /* Light grey bg for active */
  color: #333;
  font-weight: bold;
}

.sidebar-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: #07c160;
  border-radius: 0 4rpx 4rpx 0;
}

.badge-count {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    background: #07c160;
    color: white;
    font-size: 20rpx;
    padding: 2rpx 10rpx;
    border-radius: 20rpx;
}

.sidebar-bottom {
  padding: 30rpx 10rpx;
  border-top: 1rpx solid #eee;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  cursor: pointer;
}

/* Content Area */
.content {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.content-scroll {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

/* Content Header */
.content-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.header-count {
  background-color: #07c160;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
}

.btn-batch {
  font-size: 24rpx;
  color: #07c160;
  border: 1rpx solid #07c160;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  background: white;
}

/* Menu Card */
.menu-card {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.card-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}



.card-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.card-status {
  font-size: 24rpx;
  color: #07c160; /* Active Green */
  background: #eaffee;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  align-self: flex-start;
  margin-bottom: 10rpx;
}

/* Middle Row: Status and Price */
.info-middle-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.card-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b00; /* Orange */
}

.card-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 10rpx;
}

.btn-action {
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-yellow {
  background-color: #ffc300; /* Yellow/Orange */
  color: white;
}

.btn-white {
  background-color: white;
  color: #333;
  border: 1rpx solid #ddd;
}

.btn-red {
  background-color: #ff4d4f; /* Red */
  color: white;
}

/* Batch Mode Styles */
.menu-list.batch-mode {
  padding-bottom: 140rpx;
}
.btn-orange {
  background-color: #ff976a !important;
  color: white !important;
  border-color: #ff976a !important;
}
.btn-default {
  color: #666;
  border: 1rpx solid #ddd;
  background: white;
}
.batch-count {
  font-size: 24rpx;
  color: #666;
}

/* Selection Circle */
.card-img-wrapper {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.card-img {
    margin-right: 0; /* Wrapper handles margin */
    width: 100%;
    height: 100%;
}
.select-overlay {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  z-index: 10;
}
.check-circle {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  background-color: rgba(0,0,0,0.3); /* Transparent dark bg for unchecked */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}
.check-circle.checked {
  background-color: #07c160;
  border-color: #07c160;
  opacity: 1;
}
.check-circle text {
    color: white;
    font-size: 28rpx;
    font-weight: bold;
}

/* Status Colors */
.card-status.stopped {
    color: #999;
    background: #f5f5f5;
}
.btn-green {
    background-color: #07c160;
    color: white;
}

/* Bottom Bar */
.batch-bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.1);
  z-index: 100;
}
.bar-left {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #333;
}
.check-circle.sm {
    width: 36rpx;
    height: 36rpx;
    margin-right: 16rpx;
    border: none; 
    background-color: #07c160; /* Just show checked icon for static display */
}
.bar-right {
    display: flex;
    gap: 20rpx;
}
.btn-bar {
    padding: 12rpx 30rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
}
.btn-green-outline {
    border: 2rpx solid #07c160;
    color: #07c160;
    background: white;
}
.btn-orange-outline {
    border: 2rpx solid #ff976a;
    color: #ff976a;
    background: white;
}
.btn-green-fill {
    background: #07c160;
    color: white;
}

/* Disabled State */
.sidebar.disabled {
    opacity: 0.6;
    pointer-events: none;
}

/* Floating Action Button */
.fab-add {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #07c160 0%, #0ebf5c 100%);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  transition: all 0.3s;
}

.fab-add:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 72rpx;
  color: white;
  font-weight: 300;
  line-height: 1;
}
