/* pages/favorites/index/index.wxss */
page {
  background-color: #f7f8fa;
}

.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部 */
.header {
  background-color: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.count {
  font-size: 28rpx;
  color: #999;
}

/* 收藏列表 */
.favorite-list {
  padding: 20rpx;
}

.favorite-item {
  display: flex;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.04);
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.item-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-actions {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx;
}

.action-btn {
  width: 120rpx;
  height: 56rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.action-btn.add {
  background: linear-gradient(135deg, #07c160 0%, #10b981 100%);
  color: white;
}

.action-btn.remove {
  background-color: #f3f4f6;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 150rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-menu-btn {
  display: inline-block;
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #07c160 0%, #10b981 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 30rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}
